<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/random_call"
        android:layout_width="425dp"
        android:layout_height="390dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="359dp"
        android:onClick="random"
        android:text="Call now with random caller"
        android:textSize="34sp"
        app:backgroundTint="#4BCF2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings_time_call"
        android:layout_width="417dp"
        android:layout_height="378dp"
        android:layout_marginTop="3dp"
        android:onClick="selected"
        android:text="Change caller settings and time"
        android:textSize="34sp"
        app:backgroundTint="#3CADF4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random_call" />
</androidx.constraintlayout.widget.ConstraintLayout>